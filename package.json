{
	"name": "rpm-spec",
	"displayName": "RPM Spec",
	"description": "RPM Spec support for Visual Studio Code",
	"version": "0.1.0",
	"license": "MIT",
	"publisher": "LaurentTreguier",
	"engines": {
		"vscode": "^1.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/LaurentTreguier/vscode-rpm-spec.git"
	},
	"bugs": {
		"url": "https://github.com/LaurentTreguier/vscode-rpm-spec/issues"
	},
	"categories": [
		"Languages",
		"Linters"
	],
	"activationEvents": [
		"onLanguage:rpm-spec"
	],
	"main": "./out/src/extension",
	"contributes": {
		"languages": [
			{
				"id": "rpm-spec",
				"aliases": [
					"RPM Spec",
					"RPMSpec"
				],
				"extensions": [
					".spec"
				],
				"configuration": "./rpm-spec.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "rpm-spec",
				"scopeName": "source.spec",
				"path": "./syntaxes/spec.json"
			}
		],
		"configuration": {
			"title": "RPMSpec configuration",
			"properties": {
				"rpmspec.lint": {
					"type": "boolean",
					"default": true,
					"description": "Lint RPMSpec files with rpmlint"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^2.2.2",
		"vscode": "^1.1.0",
		"mocha": "^3.2.0",
		"@types/node": "^7.0.12",
		"@types/mocha": "^2.2.40"
	}
}