{
    "name": "rpm-spec",
    "displayName": "RPM spec",
    "description": "RPM spec support for Visual Studio Code",
    "icon": "images/rpm.png",
    "version": "0.2.2",
    "license": "MIT",
    "publisher": "LaurentTreguier",
    "engines": {
        "vscode": "^1.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/LaurentTreguier/vscode-rpm-spec.git"
    },
    "bugs": {
        "url": "https://github.com/LaurentTreguier/vscode-rpm-spec/issues"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:rpm-spec"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "rpm-spec",
                "aliases": [
                    "RPM spec",
                    "RPMSpec"
                ],
                "extensions": [
                    ".spec",
                    ".spec.template"
                ],
                "configuration": "./rpm-spec.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rpm-spec",
                "scopeName": "source.spec",
                "path": "./syntaxes/spec.json"
            }
        ],
        "configuration": {
            "title": "RPM spec configuration",
            "properties": {
                "rpmspec.lint": {
                    "type": "boolean",
                    "default": true,
                    "description": "Lint RPM spec files with rpmlint"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "@types/node": "^7.x.x",
        "mocha": "^5.2.0",
        "typescript": "^2.8.3",
        "vsce": "^1.41.0",
        "vscode": "^1.1.18"
    }
}
